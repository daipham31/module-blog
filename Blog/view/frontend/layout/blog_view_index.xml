<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Duud\Blog\Block\PostView" name="blog.list" template="Duud_Blog::post/view.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="comment.add" template="Duud_Blog::comment/add.phtml"></block>
            <block class="Duud\Blog\Block\Comment\Load" name="blog_comment_load" template="Duud_Blog::comment/load.phtml" cacheable="false" />
        </referenceContainer>
    </body>
</page>
    